<div class="section-banner-product">
    <div class="banner-product__left">
        <div class="banner-product__left__text">
            <h5>{{ section.settings.left_sup_title }}</h5>
            <h3>{{ section.settings.left_title }}</h3>
        </div>
        <div class="banner-product__left__card">
            <a href="{{ section.settings.product.url }}">
                <img class="banner-product__left__card__image" src="{{ section.settings.product_image | img_url: 'master' }}" alt="capita card" width="100%">
                <div class="banner-product__left__card__cta"><span>SHOP NOW</span></div>
            </a>
        </div>
    </div>
    <div class="banner-product__right">
        <img class="banner-product__right__image" src="{{ section.settings.right_image | img_url: 'master' }}" alt="capita snowboard" width="100%">
        <h6 class="banner-product__right__text">{{ section.settings.right_text }}</h6>
    </div>
</div>

{% schema %}
  {
    "name": "Banner Product",
    "settings": [
        {
            "type": "product",
            "id": "product",
            "label": "Product"
        },
        {
            "type": "image_picker",
            "id": "product_image",
            "label": "Product Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        },
        {
            "type": "text",
            "id": "left_title",
            "label": "Left Title"
        },
        {
            "type": "text",
            "id": "left_sup_title",
            "label": "Left Sup Title"
        },
        {
            "type": "text",
            "id": "right_text",
            "label": "Right Text"
        }
    ],
    "presets": [
        {
            "name": "Banner Product"
        }
    ]
  }
{% endschema %}

{% stylesheet %}

.section-banner-product {
    display: flex;
}
.banner-product__left {
    width: calc(100% * 1/3);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    background: #000;
    padding-top: 20px;
    padding-bottom: 20px;
}
.banner-product__right {
    width: calc(100% * 2/3);
    position: relative;
}
.banner-product__left__card {
    width: 330px;
    transform: translateX(50%);
    border-radius: 20px;
    background: #fff;
    border: 1px solid #fff;
    background: #000;
    z-index: 1;
}
.banner-product__left__card a {
    text-decoration: none;
}
.banner-product__left__card__cta {
    text-align: center;
    padding: 20px;
    color: #000;
    background: #fff;
    border-bottom-left-radius: 16px;
    border-bottom-right-radius: 16px;
}
.banner-product__left__text {
    color: #fff;
}
.banner-product__left__text h3 {
    color: #fff;
    font-size: 60px;
    text-transform: uppercase;
    line-height: 1;
    margin: 0;
}
.banner-product__left__text h5 {
    color: #fff;
    font-size: 20px;
    text-transform: uppercase;
    line-height: 1;
    margin: 0;
}
.banner-product__left__text {
    transform: rotate(90deg);
    text-align: right;
}
.banner-product__right__text {
    color: #fff;
    margin: 0;
    font-size: 20px;
    transform: rotate(90deg);
    position: absolute;
    right: 20px;
    top: 90px;
    text-transform: uppercase;
}
.banner-product__right__image {
    display: block;
}

@media screen and (max-width: 768px) {
    .section-banner-product {
        flex-direction: column-reverse;
        background: #000;
    }
    .banner-product__left,
    .banner-product__right {
        width: 100%;
    }
    .banner-product__left {
        padding: 0 20px 30px 20px;
        justify-content: space-between;
        align-items: baseline;
        transform: translateY(0);
        z-index: 1;
        background: transparent;
        margin-top: -50%;
    }
    .banner-product__left__card {
        transform: translate(0);
        width: 175px;
    }
    .banner-product__left__text h3 {
        font-size: 26px;
    }
    .banner-product__left__text h5 {
        font-size: 16px;
    }
}
{% endstylesheet %}
