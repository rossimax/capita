<div class="section-team-body">

    <div class="team-body">
        <div class="team-body__content">
            <h4>{{ section.settings.sup_title }} / {{ section.settings.title }}</h4>
            <div class="team-body__content__bio">{{ page.metafields.accentuate.bio }}</div>
            <div class="team-body__content__ig">
                {% if page.metafields.accentuate.instagram != blank %}
                    <a href="https://www.instagram.com/{{page.metafields.accentuate.instagram}}">{% render 'icon-instagram' %} {{ page.metafields.accentuate.instagram }}</a>
                {% endif%}
            </div>
        </div>
        <div class="team-body__table">
            <div class="team-body__table__content">
                <div class="team-body__table__content_cell">
                    <span class="cell-type">HOMETOWN:</span><br/>
                    <span class="cell-content">{{ page.metafields.team_profile.hometown }}</span>
                </div>
                <div class="team-body__table__content_cell">
                    <span class="cell-type">HEIGHT:</span><br/>
                    <span class="cell-content">{{ page.metafields.team_profile.height }}</span>
                </div>
                <div class="team-body__table__content_cell">
                    <span class="cell-type">WEIGHT:</span><br/>
                    <span class="cell-content">{{ page.metafields.team_profile.weight }}</span>
                </div>
                <div class="team-body__table__content_cell">
                    <span class="cell-type">STANCE:</span><br/>
                    <span class="cell-content">{{ page.metafields.team_profile.stance }}</span>
                </div>
            </div>
        </div>
    </div>

</div>

{% schema %}
  {
    "name": "Team Body",
    "settings": [
        {
            "type": "text",
            "id": "sup_title",
            "label": "Sup Title",
            "default": "TEAM"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "name": "Team Body"
        }
    ]
  }
{% endschema %}

{% stylesheet %}

.team-body,
.team-body h4,
.team-body__content__bio,
.team-body__table__content_cell,
.team-body__content__ig a {
    color: #fff;
}
.team-body__table__content_cell .cell-type {
    color: #676767;
}
.team-body__content__ig svg.icon.icon-instagram {
    width: 10px;
}
.team-body {
    display: flex;
    flex-wrap: wrap;
    max-width: 1440px;
    margin: 80px auto;
}
.team-body__content {
    width: 75%;
    padding-right: 150px;
    line-height: 1;
}
.team-body__table {
    width: 25%;
}
.team-body__content__bio {
    margin: 30px 0;
}
.team-body__table__content {
    display: flex;
    flex-wrap: wrap;
    line-height: 1;
    border: 1px solid #fff;
    border-radius: 30px;
    padding-bottom: 10px;
    font-family: "Calibre";
}
.team-body__table__content_cell {
    width: 50%;
    padding-bottom: 10px;
    padding-left: 20px;
    padding-top: 20px;
}
.team-body__content h4 {
    text-transform: uppercase;
}

@media screen and (max-width: 1440px) {

}

@media screen and (max-width: 768px) {
    .team-body {
        padding: 20px;
        margin: 0 auto;
    }
    .team-body__content,
    .team-body__table {
        width: 100%;
    }
    .team-body__content {
        padding-right: 0;
    }
}

{% endstylesheet %}

