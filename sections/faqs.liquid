<div class="section-faqs">

  <div class="section-faqs__content">

    <div class="section-faqs__content__list">
      <h3>ONLINE ORDERING AND DELIVERY</h3>
      <hr>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'faq_list_ord' %}
            <div class="cpt-toggle">
                <div class="cpt-toggle__title"><strong>{{ block.settings.title }}</strong> {% include 'icon-arrow-capita' %}</div>
                <div class="cpt-toggle__content">{{ block.settings.content }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="section-faqs__content__list">
      <h3>SNOWBOARD SIZING</h3>
