{% assign video_desk = section.settings.video | video_tag: image_size: 'master', autoplay: true,  loop: true, muted: true, controls: false %}
{% assign video_mob = section.settings.video_mob | video_tag: image_size: 'master', autoplay: true,  loop: true, muted: true, controls: false %}

<div class="section-hero-banner">
    
    {% if section.settings.video %}
        <div class="only-desk hero-banner__video">{{video_desk}}</div>
        <div class="only-mob hero-banner__video">{{video_mob}}</div>
        {% else %}
        <img class="only-desk hero-banner__image" src="{{ section.settings.image | img_url: 'master' }}" alt="capita hero" width="100%">
        <img class="only-mob hero-banner__image" src="{{ section.settings.image_mob | img_url: 'master' }}" alt="capita hero" width="100%">
    {% endif %}

    <a class="hero-banner__cta o-btn btn-link" href="{{section.settings.cta_link}}">{{section.settings.cta_text}}</a>

</div>

{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
        {
            "type": "checkbox",
            "id": "transparent_header",
            "label": "Transparent Header"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image Mob"
        },
        {
            "type": "video",
            "id": "video",
            "label": "Video"
        },
        {
            "type": "video",
            "id": "video_mob",
            "label": "Video Mob"
        },
        {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
        },
        {
            "type": "url",
            "id": "cta_link",
            "label": "CTA Link"
        }
    ],
    "presets": [
        {
            "name": "Hero Banner"
        }
    ]
  }
{% endschema %}

{% stylesheet %}
.section-hero-banner {
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
}
.section-hero-banner video {
    width: 100%;
    height: calc(100vh - 135px);
    object-fit: cover;
    display: block;
}
.hero-banner__cta {
    position: absolute;
    top: 86%;
    left: 50%;
    transform: translate(-50%, -50%);
    @media screen and (max-width: 991px) {
        top: unset;
        bottom: 0;
    }
}
.section-hero-banner .only-mob {
    display: none;
}
@media screen and (max-width: 768px) {
    .section-hero-banner .only-mob {
        display: block;
    }
    .section-hero-banner .only-desk {
        display: none;
    }
}
{% endstylesheet %}

