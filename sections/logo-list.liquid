<div class="section-logo-list">
    <div class="logo-list">
        <h2>{{ section.settings.title }}</h2>
        <div class="logo-list__content">
            {% for block in section.blocks %}
                <div class="single-logo">
                    <img src="{{ block.settings.image | image_url: "master" }}" alt="{{ block.settings.title | strip_html }}">
                </div>
            {% endfor %}
        </div>
        <div>{{ section.settings.description }}</div>
    </div>
</div>

{% schema %}
  {
    "name": "Logo List",
    "settings": [
        {
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "text",
                "id": "description",
                "label": "Description"
            }
        }
    ],
    "blocks": [
        {
            "type": "list",
            "name": "list",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Logo List"
        }
    ]
  }
{% endschema %}

{% stylesheet %}

.section-logo-list {
    background: #000;
    padding: 50px 20px;
}
.logo-list {
    max-width: 1440px;
    margin: 50px auto 70px auto;
    color: #fff;
}
.logo-list h2 {
    font-size: 60px;
    color: #fff;
}
.logo-list__content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.single-logo {
    height: 130px;
}

{% endstylesheet %}

