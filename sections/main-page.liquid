<div class="section-main-page" style="width: {{ section.settings.head_width }}%; margin-top: {{ section.settings.margin_top }}px">
  {% if section.settings.enable_head %}
    <div class="main-page">
      <h1>
        {% if section.settings.title != blank %}
          {{ section.settings.title }}
        {% else %}
          {{ page.title }}
        {% endif %}
      </h1>
      <div class="main-page_description">
        {% if section.settings.description != blank %}
          {{ section.settings.description }}
        {% else %}
          {{ page.content }}
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

<style>
  {% if section.settings.body_color != blank %}
    body {
      background-color: {{ section.settings.body_color }};
    }
  {% endif %}
</style>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "shopify-section--main-page four-quarter",
  "settings": [
    {
      "type": "number",
      "id": "head_width",
      "label": "Head Width",
      "default": 100,
      "info": "For Vertical Nav use 75%"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "color",
      "id": "body_color",
      "label": "Body Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "enable_head",
      "label": "Enable head (title and description)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title (instead of default title)"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description (instead of default description)"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.section-main-page {
    width: 75%;
    float: right;
    margin-bottom: 40px;
}
.main-page h1 {
  font-family: "Calibre-Semibold";
  font-size: 28px;
  margin: 0;
  text-transform: uppercase;
}
{% endstylesheet %}