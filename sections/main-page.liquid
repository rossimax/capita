<div class="section-main-page">
  {% if section.settings.enable_head %}
    <div class="main-page">
      <h1>
        {% if section.settings.title != blank %}
          {{ section.settings.title }}
        {% else %}
          {{ page.title }}
        {% endif %}
      </h1>
      <div class="main-page_description">
        {{ page.content }}
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "section-page",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_head",
      "label": "Enable head (title and description)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title (instead of default title)"
    }
  ]
}
{% endschema %}

