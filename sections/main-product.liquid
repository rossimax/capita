{% javascript %}

(function() {

        let selectors = {
          specLines: '.js-c-spec-line',
          specExagon: '.js-hexagon',
          showExagon: '.js-show-exagon',
          showLines: '.js-show-lines',
          openFindMySize: '.js-open-find-my-size',
          findMySizeContainer: '.find-my-size-container',
          openToggles: '.js-open-toggle',
          variantsSizeName: '.js-variant-size-name',
          variantsSizeSpecs: '.js-variant-size-specs',
          variantsSize: '.js-product-variant',
          variantsSizeCaption: '.js-variant-availability'
        };

        let specLines = document.querySelectorAll(selectors.specLines);
        let specExagon = document.querySelector(selectors.specExagon);
        let showExagon = document.querySelector(selectors.showExagon);
        let showLines = document.querySelector(selectors.showLines);
        let openFindMySize = document.querySelector(selectors.openFindMySize);
        let findMySizeContainer = document.querySelector(selectors.findMySizeContainer);
        let openToggles = document.querySelectorAll(selectors.openToggles);
        let variantsSizeName = document.querySelectorAll(selectors.variantsSizeName);
        let variantsSizeSpecs = document.querySelectorAll(selectors.variantsSizeSpecs);
        let variantsSize = document.querySelectorAll(selectors.variantsSize);
        let variantsSizeCaption = document.querySelector(selectors.variantsSizeCaption);

        window.addEventListener("load", function(){

          variantsSize.forEach((variantSize) => {
            variantSize.addEventListener("click", function(){

              let qnt = Number(variantSize.dataset.qnt)

              if ((qnt > 0) && (qnt < 5)) {
                variantsSizeCaption.querySelector(".js-var-qnt").innerHTML = variantSize.dataset.qnt

                variantsSizeCaption.classList.remove("hidden")
                setTimeout(function(){
                  variantsSizeCaption.classList.add("hidden")
                }, 2500)
              }

            })
          })

          variantsSizeName.forEach((variantSizeName) => {
            variantSizeName.addEventListener("click", function(){

              variantsSizeName.forEach((variantSizeName_check) => {
                variantSizeName_check.classList.remove("active")
              })

              variantSizeName.classList.add("active")

              variantsSizeSpecs.forEach((variantSizeSpecs) => {
                if (variantSizeSpecs.dataset.variantName == variantSizeName.dataset.variantName) {
                  variantSizeSpecs.classList.remove("hide")
                } else {
                  variantSizeSpecs.classList.add("hide")
                }
              })

            })
          })

          openToggles.forEach((openToggle) => {
            openToggle.addEventListener("click", function(){
              if ( openToggle.parentNode.classList.contains("open") ) {
                openToggle.parentNode.classList.remove("open")
              } else {
                openToggle.parentNode.classList.add("open")
              }
            })
          })

          if (showExagon) {
            showExagon.addEventListener("click", function(){
              console.log("showExagon")
              specLines.forEach((specLine) => {
                specLine.classList.add("hide")
              })
              specExagon.classList.remove("hide")
            })
          }

          if (showLines) {
            showLines.addEventListener("click", function(){
              console.log("showLines")
              specLines.forEach((specLine) => {
                specLine.classList.remove("hide")
              })
              specExagon.classList.add("hide")
            })
          }

          if (openFindMySize) {
            openFindMySize.addEventListener("click", function(){
              findMySizeContainer.classList.remove("hide")
            })
          }
        })

    })();

