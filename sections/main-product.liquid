{% if template.suffix == 'snowboards' %}
  {% if product.metafields.accentuate.hero_title_color == 'Black' %}
    {% assign hero_title_color = 'text-black' %}
  {% else %}
    {% assign hero_title_color = 'text-white' %}
  {% endif %}

  <div class="c-product-hero">
    {% liquid
      if product.metafields.snowboard_intro.background_image_new
        assign background_image = product.metafields.snowboard_intro.background_image_new
      else
        assign background_image = 'https://placehold.co/1920x600/f0f0f0/000'
      endif
    -%}
    <img src="{{ background_image }}" alt="Capita | {{ product.title | strip_html }}">
  </div>
  <div class="c-product-hero__name o-text"><h1>{{ product.title }}</h1></div>
  {% assign class_product = 'snowboard-product' %}
{% else %}
  {% assign class_product = 'other-product' %}
{% endif %}

<main class="main-page {{ class_product }} main-page-pdp">
  <div class="c-product-gallery js-product-gallery">
    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="c-product-gallery__item">
            {% if template.suffix == 'snowboards' %}

              {% for media in product.media %}

                {%- assign img_url = media | image_url: width: 1024 -%}
                {%- assign img_url__attr = media | image_url: width: 100, height: 100 -%}
                  <img src="{{ img_url }}" alt="{{ product.title | strip_html }}" 
                    attr-img-url="{{ img_url__attr }}" 
                    attr-num="{{ forloop.index0 }}" 
                    class="js-product-gallery-item"
                    style="
                    {%- if forloop.index0 != 0 -%}
                    display:none
                    {%- endif -%}
                    " 
                  >
                {% endfor %}
              {% else %}

                {% for variant_m in product.variants %}

                  {%- assign img_url = product.media[0] | image_url: width: 1024 -%}
                  {%- assign img_url__attr = product.media[0] | image_url: width: 100, height: 100 -%}
                    <img src="{{ img_url }}" alt="{{ product.title | strip_html }}" 
                      attr-img-url="{{ img_url__attr }}" 
                      attr-num="{{ forloop.index0 }}" 
                      class="js-product-gallery-item"
                      style="
                      {%- if forloop.index0 != 0 -%}
                      display:none
                      {%- endif -%}
                      " >
                {% endfor %}

              {% endif %}
            </div>
        </div>

        {% if template.suffix == 'snowboards' %}
          {% assign slider_images = product.metafields.accentuate.slider_image %}
          {% if slider_images != blank %}
            {% for slider_image in slider_images %}
              <div class="swiper-slide">
                <div class="c-product-gallery__item">
                  <img src="{{ slider_image }}" alt="{{ product.title | strip_html }} extra" class="js-product-gallery-item">
                </div>
              </div>
            {% endfor %}
          {% endif %}
        {% else %}
            {% for media in product.media %}
              {% if forloop.index > 1 %}
                {%- assign img_url = media | image_url: width: 1024 -%}
                <div class="swiper-slide">
                  <div class="c-product-gallery__item">
                    <img src="{{ img_url }}" alt="{{ product.title | strip_html }} extra" class="js-product-gallery-item">
                  </div>
                </div>
              {% endif %}
            {% endfor %}
        {% endif %}


