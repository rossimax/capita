<div class="section-team-list">
    <div class="team-list">
        {% for block in section.blocks %}
            <div class="team-list__card">
                <a href="{{ block.settings.link_url }}">
                    <img class="team-list__card__image" src="{{ block.settings.image | img_url: "master" }}" alt="{{ block.settings.name | strip_html }}">
                    <div class="team-list__card__name">
                        <span>{{ block.settings.name }}</span>
                    </div>
                </a>
            </div>
        {% endfor%}
    </div>
</div>

{% schema %}
  {
    "name": "Team List",
    "blocks": [
        {
            "type": "team_list",
            "name": "Team Card",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "url",
                    "id": "link_url",
                    "label": "Url"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Team List"
        }
    ]
  }
{% endschema %}


{% stylesheet %}
.team-list {
    max-width: 1440px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.team-list__card {
    margin: 10px;
    border: 1px solid #fff;
    border-radius: 20px;
    width: calc(25% - 20px);
}
.team-list__card a {
    text-decoration: none;
}
img.team-list__card__image {
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    height: 360px;
    object-fit: cover;
    width: 100%;
}
.team-list__card__name {
    width: 100%;
    text-align: center;
    padding: 20px 0;
    color: #fff;
    font-size: 21px;
    font-family: "Calibre";
    border-top: 1px solid #fff;
}

@media screen and (max-width: 991px) {
    .team-list__card {
        width: calc(50% - 20px);
    }
    img.team-list__card__image {
        height: 175px;
    }
    .team-list__card__name {
        padding: 10px 0;
    }
}

{% endstylesheet %}
