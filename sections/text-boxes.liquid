{% stylesheet %}


.text-boxes {
    max-width: 1620px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
    padding-bottom: 60px;
}
.text-boxes__head {
    margin: 60px 0;
    justify-content: space-between;
}
.single-text-boxes__content {
    background: #ececec;
    width: calc(100% - 60px);
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    padding: 50px;
    border-radius: 30px;
    margin: 0 auto;
    height: 460px;
}
.text-boxes__foot {
    text-align: center;
}
.text-boxes video {
    border-radius: 30px;
    min-height: 380px;
    object-fit: cover;
}
.text-boxes__head__content {
    margin-top: 40px;
}
.text-boxes__head__content__paragraph {
    padding-right: 40px;
}
.single-text-boxes__content__title {
    text-align: center;
    line-height: 1;
    margin-top: 30px;
    font-size: 36px;
    height: 110px;
}
.text-boxes__foot__btn {
    width: 740px;
    text-transform: unset;
}
.text-boxes__foot {
    margin-top: 20px;
}

@media screen and (max-width: 1190px) {
    .single-text-boxes__content__title {
        font-size: 24px;
    }
    .single-text-boxes__content {
        height: 340px;
        width: calc(100% - 10px);
    }
    .single-text-boxes__content img {
        max-width: 130px;
    }
}

@media screen and (max-width: 768px) {
    .single-text-boxes.col-4 {
        width: calc(100% / 3);
    }
    .text-boxes__head__content__paragraph.col-6 {
        margin-bottom: 30px;
        padding-right: 0;
    }
    .text-boxes__head {
        margin: 20px 0 40px 0;
    }
    .text-boxes__head__content {
        margin-top: 20px;
    }
    .text-boxes video {
        min-height: 260px;
    }
    .text-boxes__cta__btn {
        width: 100%;
    }
    .single-text-boxes__content__title {
        font-size: 16px;
        height: unset;
        margin-top: 10px
    }
    .single-text-boxes__content {
        padding: 30px 0;
        height: 200px;
    }
    .single-text-boxes__content img {
        max-width: 80px;
    }
    .text-boxes__cta {
        margin-top: 40px;
    }
    .text-boxes__cards.row {
        margin: 0 -5px;
    }
}

{% endstylesheet %}

