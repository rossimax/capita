

<div class="section-text-boxes" style="padding-top: {{ section.settings.padding_top }}px;padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="text-boxes">

        <div class="text-boxes__head">
            <h2 class="title">{{ section.settings.title }}</h2>
        </div>

        <div class="text-boxes__cards row">
            {% for block in section.blocks %}

                {% if block.settings.text_left %}
                    {% assign row_direction = "row" %}
                {% else %}
                    {% assign row_direction = "row-reverse" %}
                {% endif %}
                <div class="text-boxes__head__content {{ row_direction }}">
                    <div class="text-boxes__head__content__paragraph col-6">
                        <h5 class="text-boxes__head__content__paragraph__title">
                            {{ block.settings.title }}
                        </h5>
                        <div class="text-boxes__head__content__paragraph__text">
                            {{ block.settings.paragraph }}
                        </div>
                    </div>
                    <div class="text-boxes__head__content__media col-6">
                        {% if block.settings.video %}
                            {% assign video = section.settings.video | video_tag: image_size: 'master', autoplay: true,  loop: true, muted: true, controls: false %}
                            {{ video }}
                        {% else %}
                            <img src="{{ block.settings.image | img_src: "master" }}" alt="capita">
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text-boxes__foot">
            <h2 class="text-boxes__foot__title">
                <h2 class="title">{{ section.settings.title_bottom }}</h2>
            </h2>
            <div class="text-boxes__foot__ctas">
                <a class="btn btn-secondary black text-boxes__foot__btn" href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
                <a class="btn btn-secondary black text-boxes__foot__btn" href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
            </div>
        </div>

    </div>
</div>

