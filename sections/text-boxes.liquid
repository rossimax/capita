            "label": "Title"
        },
        {
            "type": "html",
            "id": "title_bottom",
            "label": "Title Bottom"
        },
        {
            "type": "text",
            "id": "cta_text_1",
            "label": "CTA Text"
        },
        {
            "type": "url",
            "id": "cta_link_1",
            "label": "CTA Link"
        },
                {
            "type": "text",
            "id": "cta_text_2",
            "label": "CTA Text"
        },
        {
            "type": "url",
            "id": "cta_link_2",
            "label": "CTA Link"
        }
    ],
    "blocks": [
        {
            "type": "box",
            "name": "Box",
            "settings": [
                {
                    "type": "checkbox",
                    "id": "text_left",
                    "label": "Text left"
                },
                {
                    "type": "video",
                    "id": "video",
